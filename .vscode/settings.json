{
  "restoreTerminals.artificialDelayMilliseconds": 300,
  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
          "name": "client",
          "commands": ["npm run start"]
        },
        {
          "name": "install",
          "commands": ["npm install"],
          "shouldRunCommands": false
        }
      ]
    }
  ],

  "mcp": {
    "servers": {
      "console-ninja": {
        "command": "cmd.exe",
        "args": ["/c", "node", "%USERPROFILE%/.console-ninja/mcp/"]
      }
    }
  }
}
